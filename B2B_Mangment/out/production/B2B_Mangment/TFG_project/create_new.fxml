      <TableView fx:id="entityTable" cacheShape="false" prefHeight="862.0" prefWidth="904.0" BorderPane.alignment="CENTER">
          <columns>
              <TableColumn prefWidth="100.0" text="ID">
                  <cellValueFactory>
                      <PropertyValueFactory property="id" />
                  </cellValueFactory>
              </TableColumn>
              <TableColumn prefWidth="150.0" text="Name">
                  <cellValueFactory>
                      <PropertyValueFactory property="name" />
                  </cellValueFactory>
              </TableColumn>
              <TableColumn prefWidth="75.0" text="Attendees">
                  <cellValueFactory>
                      <PropertyValueFactory property="attendees" />
                  </cellValueFactory>
              </TableColumn>
